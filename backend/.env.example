# =============================================================================
# Mosaic Backend - Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Environment
ENVIRONMENT=production

# CORS - Add your Vercel frontend URL
CORS_ORIGINS=https://your-app.vercel.app,http://localhost:5173

# =============================================================================
# REQUIRED: Core API Keys
# =============================================================================

# Anthropic Claude API Key (required)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# JWT Secret Key - Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# Encryption Key - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-encryption-key-here

# =============================================================================
# REQUIRED: App Database (Railway MySQL or PlanetScale)
# =============================================================================

# Local MySQL for app data (users, chat history, credentials)
LOCAL_MYSQL_HOST=your-railway-mysql-host.railway.app
LOCAL_MYSQL_PORT=3306
LOCAL_MYSQL_USER=root
LOCAL_MYSQL_PASSWORD=your-mysql-password
LOCAL_MYSQL_DATABASE=mosaic

# =============================================================================
# OPTIONAL: Connector Credentials (set via Settings panel in UI)
# =============================================================================

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# MySQL Connector (for querying user databases)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_DATABASE=

# JIRA
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# Google OAuth (for Google Workspace connector)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Shopify
SHOPIFY_SHOP_URL=
SHOPIFY_ACCESS_TOKEN=
SHOPIFY_API_VERSION=2024-01

# Slack
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=

# GitHub
GITHUB_TOKEN=

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
